<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="482.0" prefWidth="372.0" spacing="20" style="-fx-background-color: #a9bf7d;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.plantController">
    <Label fx:id="coinsLabel" style="-fx-font-size: 20px; -fx-text-fill: #000000;" text="Coins: 10" />

    <Button onAction="#handlePlantTree" prefHeight="30.0" prefWidth="200.0" style="-fx-font-size: 14px; -fx-background-color: #6cbf7d; -fx-text-fill: #ffffff;" text="Plant a Tree (Cost: 5 coins)" />
    <Button onAction="#handleHarvestTree" prefHeight="30.0" prefWidth="200.0" style="-fx-font-size: 14px; -fx-background-color: #bf6c6c; -fx-text-fill: #ffffff;" text="Harvest Tree" />

    <!-- Khu vực hiển thị cây và các chức năng liên quan -->
    <HBox fx:id="treeContainer" prefHeight="50.0" prefWidth="300.0" spacing="10">
        <!-- Cây và các thành phần sẽ được thêm vào đây khi cây được trồng -->
    </HBox>

    <!-- Button và ProgressBar cho chức năng tưới nước -->
    <Button fx:id="waterButton" onAction="#handleWaterTree" prefHeight="32.0" prefWidth="200.0" style="-fx-font-size: 14px; -fx-background-color: #6c8fbf; -fx-text-fill: #ffffff;" text="Water Tree" visible="false" />
    <ProgressBar fx:id="waterProgressBar" prefWidth="200.0" progress="0.0" style="-fx-accent: #6cbf6c;" visible="false" />
</VBox>
