<AnchorPane prefHeight="700.0" prefWidth="1300.0" style="-fx-background-color: #fcf4e7;" stylesheets="@../../Style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.book.AddTransactionController">
    <VBox layoutX="18.0" layoutY="30.0" prefHeight="386.0" prefWidth="226.0" spacing="30.0">
        <Label style="-fx-font-size: 18px;" text="Username" />
        <TextField fx:id="tf_username" promptText="Username" style="-fx-font-size: 16px;" />

        <Label fx:id="label_borrowedDate" style="-fx-font-size: 18px;" text="Date" />

        <Label fx:id="label_dueDate" style="-fx-font-size: 18px;" text="Due Date" />

        <Label style="-fx-font-size: 18px;" text="Quantity" />
        <ChoiceBox fx:id="cb_quantity" prefWidth="150.0" style="-fx-background-color: #dadada;" />
    </VBox>
    <AnchorPane layoutX="400.0" layoutY="50.0" prefHeight="600.0" prefWidth="850.0" style="-fx-background-color: #f0e9dc; -fx-background-radius: 15px;">
        <VBox layoutX="40.0" layoutY="40.0" spacing="25.0">
            <Label fx:id="label_title" style="-fx-font-size: 40px; -fx-font-family: Corbel; -fx-font-weight: Bold;" text="Title: " />
            <Label fx:id="label_author" style="-fx-font-size: 20px; -fx-font-family: Corbel;" text="Author: " />
            <Label fx:id="label_category" style="-fx-font-size: 20px; -fx-font-family: Corbel;" text="Category: " />
            <Label fx:id="label_publishYear" style="-fx-font-size: 20px; -fx-font-family: Corbel;" text="Publish Year: " />
            <Label fx:id="label_quantity" style="-fx-font-size: 20px; -fx-font-family: Corbel;" text="Quantity: " />
        </VBox>
        <ImageView fx:id="image_coverBook" fitHeight="400.0" fitWidth="320.0" layoutX="482.0" layoutY="34.0" preserveRatio="true">
            <Image url="@../Image/cover_not_found.png" />
         <effect>
            <DropShadow />
         </effect>
        </ImageView>
        <Button fx:id="button_back" layoutX="679.0" layoutY="512.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="82.0" style="-fx-background-color: #cfda6b;" styleClass="buttonClick" text="Back">
            <font>
                <Font name="Century Gothic" size="18.0" />
            </font>
        </Button>
        <Button fx:id="button_submit" layoutX="437.0" layoutY="512.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: #cfda6b;" styleClass="buttonClick" text="Submit">
            <font>
                <Font name="Century Gothic" size="18.0" />
            </font>
        </Button>
    </AnchorPane>
</AnchorPane>
