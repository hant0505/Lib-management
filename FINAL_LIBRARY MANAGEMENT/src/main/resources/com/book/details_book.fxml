<ScrollPane hbarPolicy="NEVER" stylesheets="@../../Style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.book.DetailsBookController">
    <AnchorPane prefHeight="700.0" prefWidth="1300.0" style="-fx-background-color: #fcf4e7;" stylesheets="@../../Style.css">
        <Label layoutX="96.0" layoutY="45.0" prefHeight="46.0" prefWidth="224.0" text="Book Details" AnchorPane.leftAnchor="96.0" AnchorPane.topAnchor="45.0">
