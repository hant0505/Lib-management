    <children>
        <GridPane fx:id="gameGrid" layoutX="50.0" layoutY="50.0" />
        <Label fx:id="statusLabel" layoutX="148.0" layoutY="10.0" text="Status:" />
        <Label fx:id="scoreLabel" layoutX="50.0" layoutY="10.0" text="Score: 0" />
        <!-- Thêm Label cho chữ LOSER -->
        <Label fx:id="loserLabel" text="LOSER" layoutX="200.0" layoutY="200.0"
               style="-fx-font-size: 60px; -fx-font-weight: bold; -fx-text-fill: red;" visible="false"/>
    </children>
</AnchorPane>
