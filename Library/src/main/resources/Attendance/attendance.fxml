<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="635.0" spacing="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Attendance.AttendanceController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Bảng Chấm Công" />

    <!-- TableView -->
    <TableView fx:id="attendanceTableView" prefHeight="300" prefWidth="580">
        <columns>
            <!-- Cột ID -->
            <TableColumn fx:id="id" prefWidth="50" text="ID" />
            <!-- Cột Username -->
            <TableColumn fx:id="username" prefWidth="100" text="Username" />
            <!-- Cột Check-In Time -->
            <TableColumn fx:id="checkIn" prefWidth="150" text="Check-In Time" />
            <!-- Cột Check-Out Time -->
            <TableColumn fx:id="checkOut" prefWidth="150" text="Check-Out Time" />
            <!-- Cột Date -->
            <TableColumn fx:id="date" prefWidth="100" text="Date" />
            <!-- Cột Status -->
            <TableColumn fx:id="status" prefWidth="100" text="Status" />
        </columns>
    </TableView>

    <!-- Nút đóng cửa sổ -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="button_close" text="Close" />
    </HBox>
</VBox>
